<div class='column-ticket' draggable='true'>
  <h4>{{@ticket.title}}</h4>
  <p>{{@ticket.developer}}</p>
  <p>{{@ticket.tester}}</p>
  <p>{{@ticket.description}}</p>
  <LinkTo
    @route='edit'
    @model={{@ticket.id}}
    class='ticket-button'
  >Edit</LinkTo>
  <LinkTo
    @route='delete'
    @model={{@ticket.id}}
    class='ticket-button'
  >Delete</LinkTo>
  <div class='ticket-date'>Last Change: {{@ticket.date}}</div>
</div>