<div class='form-group'>
  <label for={{@name}}>{{@labelTitle}}</label>
  <select name={{@name}} id={{@name}}>
    <option value={{@defaultOption}}>{{capitalize @defaultOption}}</option>
    {{#each @values as |value|}}
      {{#unless (compare value.option @defaultOption)}}
        <option value={{value.option}} label={{value.label}}></option>
      {{/unless}}
    {{/each}}
  </select>
</div>