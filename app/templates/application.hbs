<Header />
<ColumnsContainer>
  {{#each this.columnTypes as |column|}}
    <Column
      @status={{column.status}}
      @header={{capitalize column.status}}
      @message='Add or drop ticket'
    >{{#each this.tickets.list as |ticket|}}
        {{#if (compare column.status ticket.status)}}
          <Ticket
            @title={{ticket.title}}
            @ticket_id={{ticket.id}}
            @delete={{this.delete}}
            @date={{ticket.date}}
          />
        {{/if}}
      {{/each}}
    </Column>
  {{/each}}
</ColumnsContainer>

{{outlet}}