<Modal @modalBtnClose={{this.application.changeRoute}} @whereTo={{'/'}}>
  <Form>
    <h3>Add new ticket</h3>
    <Form::Select
      @labelTitle='Status'
      @name='selectStatus'
      @defaultOption='backlog'
      @values={{this.stats}}
    />

    <Form::Input
      @labelTitle='Title'
      @type='text'
      @name='title'
      @placeholder='Enter Title'
      @value={{this.title}}
    />

    <Form::Input
      @labelTitle='Developer Name'
      @type='text'
      @name='developer'
      @placeholder='Enter Name'
      @value={{this.developer}}
    />

    <Form::Input
      @labelTitle='Tester Name'
      @type='text'
      @name='tester'
      @placeholder='Enter Name'
      @value={{this.tester}}
    />

    <Form::Textarea
      @labelTitle='Description'
      @name='description'
      @cols='30'
      @rows='10'
      @placeholder='Enter description here'
      @value={{this.description}}
    />

    <Form::Button
      @formBtnAct={{this.dialog.openDialog}}
      @formBtnName='Create'
    />
  </Form>
</Modal>
<ConfirmationDialog
  @ticketTitle={{this.title}}
  @dialogConfirm={{this.submitForm}}
  @dialogDeny={{this.dialog.closeDialog}}
  @isOpen={{this.dialog.state}}
  @dialogMessage={{'Create this ticket?'}}
/>